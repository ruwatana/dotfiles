[branch]
  sort = -committerdate

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  ui = auto

[commit]
  verbose = true

[core]
  autocrlf = input
  editor = vim
  whitespace = trailing-space,space-before-tab

[diff]
  algorithm = histogram
  mnemonicPrefix = true
  renames = copies

[fetch]
  prune = true
  pruneTags = true

[gui]
  encoding = utf-8

[init]
  defaultBranch = main

[log]
  date = iso

[merge]
  conflictstyle = zdiff3
  tool = vimdiff

[pull]
  ff = only

[push]
  autoSetupRemote = true
  default = current

[rebase]
  autoStash = true

[status]
  showUntrackedFiles = all
  submoduleSummary = true

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

